<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/ocr_dialog_layout"
              android:layout_marginLeft="20dp"
              xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Spinner

            android:id="@+id/ocr_list_spinner"
            style="@style/spinner"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:textSize="15dp"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:layout_marginTop="16dp"
            android:id="@+id/spinner_add_listitem"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:hint="请输入需要的标题"

            android:layout_alignParentStart="true"/>

             <Button
                 android:layout_marginRight="7dp"
            android:layout_alignParentRight="true"
            android:id="@+id/add_spinner_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/add2"/>
        <Button
            android:layout_marginRight="7dp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:id="@+id/finish_spinner_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/finish"/>

    </RelativeLayout>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/ocr_contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_baseColor="@color/gray"
        app:met_floatingLabelText="内容"
        android:textSize="15dp"
        android:hint="内容"
        app:met_primaryColor="@color/greyed"
        app:met_floatingLabel="normal"/>
</LinearLayout>
